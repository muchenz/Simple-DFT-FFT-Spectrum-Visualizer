<Window x:Class="Wpf_FFT.View.DialogOk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_FFT.View"
        mc:Ignorable="d"
        Title="Dialog" Height="160" Width="250" FontSize="18" WindowStartupLocation="CenterScreen">
    <Grid>


        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="14" Margin="10" Text="{Binding Message, FallbackValue='MESSAGE'}" TextWrapping="Wrap"/>
            <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
          
                <Button  Margin="20" Command="{Binding OKCommand}" Width="60" Height="30"  >OK</Button>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
